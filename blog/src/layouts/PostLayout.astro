---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage, tags } = post.data;

const formattedDate = pubDate.toLocaleDateString('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={title} description={description} ogImage={heroImage}>
  <article class="post">
    <header class="post-header">
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      {updatedDate && (
        <span class="updated">（更新: {formattedUpdatedDate}）</span>
      )}
      <h1>{title}</h1>
      {tags.length > 0 && (
        <div class="tags">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    {heroImage && (
      <img class="hero-image" src={heroImage} alt="" />
    )}
    <div class="content">
      <slot />
    </div>
    <footer class="post-footer">
      <a href="/web/blog/">&larr; 記事一覧に戻る</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post-header {
    margin-bottom: 2rem;
  }

  .post-header time {
    color: var(--color-text-light);
    font-size: 0.875rem;
  }

  .updated {
    color: var(--color-text-light);
    font-size: 0.875rem;
  }

  .post-header h1 {
    margin-top: 0.5rem;
    margin-bottom: 1rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-bg-secondary);
    color: var(--color-text-light);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
  }

  .hero-image {
    width: 100%;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .content {
    margin-bottom: 3rem;
  }

  .post-footer {
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }
</style>
