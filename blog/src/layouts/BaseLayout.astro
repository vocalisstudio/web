---
import '../styles/global.css';
import type { Language } from '../content/config';
import { defaultLang } from '../content/config';
import { useTranslations } from '../i18n/ui';
import { getAlternateLanguage } from '../i18n/utils';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  lang?: Language;
  slug?: string;
}

const { title, description, ogImage, lang = defaultLang, slug } = Astro.props;
const t = useTranslations(lang);
const alternateLang = getAlternateLanguage(lang);
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const basePath = import.meta.env.BASE_URL || '/web/blog';

const alternateURL = slug
  ? new URL(`${basePath}/${alternateLang}/posts/${slug}/`, Astro.site)
  : new URL(`${basePath}/${alternateLang}/`, Astro.site);
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" sizes="32x32" href="/web/images/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/web/images/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/web/images/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | {t('site.title')}</title>
    <meta name="description" content={description || t('site.description')} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="alternate" hreflang={alternateLang} href={alternateURL} />
    <link rel="alternate" hreflang={lang} href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={new URL(`${basePath}/en/`, Astro.site)} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | ${t('site.title')}`} />
    <meta property="og:description" content={description || t('site.description')} />
    <meta property="og:site_name" content={t('site.title')} />
    <meta property="og:locale" content={lang === 'ja' ? 'ja_JP' : 'en_US'} />
    <meta property="og:locale:alternate" content={lang === 'ja' ? 'en_US' : 'ja_JP'} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="alternate" type="application/rss+xml" title={`${t('site.title')} RSS (${lang.toUpperCase()})`} href={`${basePath}/rss-${lang}.xml`} />
  </head>
  <body>
    <header class="header">
      <nav class="nav">
        <a href={`${basePath}/${lang}/`} class="logo">
          <span class="logo-icon">V</span>
          <span class="logo-text">Vocalis Studio Blog</span>
        </a>
        <div class="nav-links">
          <a href={`${basePath}/${lang}/`}>{lang === 'ja' ? '記事一覧' : 'Posts'}</a>
          <a href="/web/">{lang === 'ja' ? '製品ページ' : 'Product'}</a>
          <a href={`${basePath}/rss-${lang}.xml`} class="rss-link" title="RSS">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/>
            </svg>
          </a>
        </div>
      </nav>
    </header>

    <main class="main">
      <slot />
    </main>

    <footer class="footer">
      <div class="footer-content">
        <div class="footer-brand">
          <span class="logo-icon small">V</span>
          <span>Vocalis Studio</span>
        </div>
        <div class="footer-links">
          <a href="/web/terms.html">{lang === 'ja' ? '利用規約' : 'Terms'}</a>
          <a href="/web/privacy.html">{lang === 'ja' ? 'プライバシーポリシー' : 'Privacy'}</a>
          <a href="/web/support.html">{lang === 'ja' ? 'サポート' : 'Support'}</a>
        </div>
        <div class="footer-social">
          <a href="https://x.com/vocaborabo" target="_blank" rel="noopener noreferrer" aria-label="X (Twitter)">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a href="https://instagram.com/vocalis_studio" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
          </a>
        </div>
      </div>
      <p class="copyright">{t('footer.copyright')}</p>
    </footer>
  </body>
</html>

<style>
  /* Header - ガラス効果 */
  .header {
    position: sticky;
    top: 0;
    z-index: 40;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: saturate(180%) blur(20px);
    -webkit-backdrop-filter: saturate(180%) blur(20px);
    border-bottom: 1px solid var(--color-border-light);
  }

  .nav {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0.875rem 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text);
    font-weight: 600;
    font-size: 1rem;
  }

  .logo:hover {
    color: var(--color-text);
    text-decoration: none;
  }

  .logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.75rem;
    height: 1.75rem;
    background: var(--color-primary);
    color: white;
    font-weight: 700;
    font-size: 0.75rem;
    border-radius: 0.5rem;
  }

  .logo-icon.small {
    width: 1.5rem;
    height: 1.5rem;
    font-size: 0.625rem;
  }

  .logo-text {
    display: none;
  }

  @media (min-width: 640px) {
    .logo-text {
      display: inline;
    }
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .nav-links a {
    color: var(--color-text-light);
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--color-primary);
    text-decoration: none;
  }

  .rss-link {
    display: flex;
    align-items: center;
    color: var(--color-text-muted);
  }

  .rss-link:hover {
    color: var(--color-accent);
  }

  /* Main */
  .main {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2.5rem 1rem;
    min-height: calc(100vh - 200px);
  }

  /* Footer */
  .footer {
    background: var(--color-bg-tertiary);
    border-top: 1px solid var(--color-border-light);
    padding: 2rem 1rem;
  }

  .footer-content {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
  }

  @media (min-width: 640px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    color: var(--color-text-muted);
    font-size: 0.8125rem;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--color-primary);
    text-decoration: none;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
  }

  .footer-social a {
    color: var(--color-text-muted);
    transition: color 0.2s ease;
  }

  .footer-social a:hover {
    color: var(--color-primary);
  }

  .copyright {
    text-align: center;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin-top: 1.5rem;
  }
</style>
