---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { useTranslations } from '../../i18n/ui';

const lang = 'en';
const t = useTranslations(lang);

const posts = (await getCollection('posts', ({ data, slug }) =>
  !data.draft && slug.startsWith('en/')
)).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title={t('index.title')} description={t('index.description')} lang={lang}>
  <section class="hero">
    <h1>Vocalis Studio Blog</h1>
    <p>{t('index.description')}</p>
  </section>

  <section class="posts">
    {posts.length === 0 ? (
      <p class="no-posts">No posts yet.</p>
    ) : (
      posts.map((post) => <PostCard post={post} lang={lang} />)
    )}
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2.5rem 1.5rem;
    background: linear-gradient(135deg, var(--color-bg-tertiary) 0%, var(--color-bg) 100%);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border-light);
  }

  .hero h1 {
    margin-top: 0;
    margin-bottom: 0.75rem;
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--color-text);
    letter-spacing: -0.01em;
  }

  @media (min-width: 640px) {
    .hero h1 {
      font-size: 2rem;
    }
  }

  .hero p {
    color: var(--color-text-light);
    margin: 0;
    font-size: 0.9375rem;
    line-height: 1.7;
  }

  .posts {
    display: grid;
    gap: 1.25rem;
  }

  .no-posts {
    color: var(--color-text-muted);
    text-align: center;
    padding: 4rem 0;
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
    font-size: 0.9375rem;
  }
</style>
